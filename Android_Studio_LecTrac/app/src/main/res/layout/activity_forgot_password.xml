<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">



    <EditText
        android:id="@+id/edtForgotUserID"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="firstName"
        android:background="@drawable/general_textview"
        android:ems="10"
        android:fontFamily="@font/msyi"
        android:hint="Student/Lecturer ID"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/buttonTextColor"
        android:textColorHint="@color/hintColor"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvExplanation"/>

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_below="@+id/edtForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/fancy_button"
        android:fontFamily="@font/msyi"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColor"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tvExplanation"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tauri"
        android:text="@string/ExplanationString"
        android:textColor="@color/mainText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelForgot"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/labelForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/msyi"
        android:text="Forgot Password"
        android:textColor="@color/subSubHeading"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgHeading"/>

    <ImageView
        android:id="@+id/imgHeading"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@null"
        android:src="@drawable/name"
        android:tint="@color/miniElipseButtonColor" />

    <EditText
        android:id="@+id/edtForgotPassword"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/general_textview"
        android:ellipsize="start"
        android:ems="10"
        android:fontFamily="@font/msyi"
        android:hint="Wits Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/buttonTextColor"
        android:textColorHint="@color/hintColor"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtForgotUserID"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="49dp"
        android:layout_height="33dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="156dp"
        android:layout_toStartOf="@id/imgHeading"
        android:layout_toLeftOf="@id/imgHeading"
        android:contentDescription="@null"
        android:src="@drawable/ic_back"
        android:tint="@color/miniElipseButtonColor" />

    <ProgressBar
        android:id="@+id/progressBarForgotPass"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />


</RelativeLayout>