<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:screenOrientation="portrait"
    android:background="@drawable/general_panel"
    android:paddingBottom="25dp">

    <TextView
        android:id="@+id/tvMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:text="Date"
        android:textColor="@color/subSubHeading"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/msyi"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp" />


    <TextView
        android:id="@+id/tvMessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/tvMessageDate"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:text="Test Query"
        android:textColor="@color/subHeading"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/msyi"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tvMessageClassification"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessageName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Information"
        android:textColor="@color/subSubHeading"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/msyi" />

    <TextView
        android:id="@+id/tvMessageCourseCode"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessageName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_toEndOf="@+id/tvMessageClassification"
        android:layout_toRightOf="@+id/tvMessageClassification"
        android:gravity="center"
        android:text="COMS2012"
        android:textColor="@color/subSubHeading"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/msyi" />

    <TextView
        android:id="@+id/tvMessageContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessageClassification"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/raleway_light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Contents"
        android:textColor="@color/mainText"
        android:textSize="22sp"
        app:fontFamily="@font/msyi" />


    <Button
        android:id="@+id/btnMessageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessageContents"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/general_button"
        android:fontFamily="@font/msyi"
        android:text=" Delete "
        android:textColor="@color/buttonTextColor"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>
