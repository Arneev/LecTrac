<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OffWhite"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitlePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_horizontal"
            android:text="Create New Task"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingTop="22dp">

        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAddTitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Add Title"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTitleTask"
                android:inputType="text"
                android:background="@drawable/background_add_task"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/colorPrimaryDark"
                android:hint="What to do?"
                android:layout_width="match_parent"
                android:layout_height="55dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDueDate"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Due Date"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDueDate"
                android:background="@drawable/background_add_task"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColorHint="@color/gray"
                android:textSize="18sp"
                android:maxLength="25"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Due Date"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <TextView
                android:id="@+id/tvDisplayDate"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Date"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/btnDueTime"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_add_task"
                android:hint="Due Time"
                android:maxLength="25"
                android:layout_marginTop="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDisplayTime"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Time"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSaveTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_btn"
        android:text="Create Now"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnCancelTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_btn"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp" />


</LinearLayout>