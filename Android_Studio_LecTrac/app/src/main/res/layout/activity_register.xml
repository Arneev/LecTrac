<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline_right"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="24dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline_left" />

    <EditText
        android:id="@+id/userID"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="firstName"
        android:background="@drawable/background_et"
        android:ems="10"
        android:hint="Student/Lecturer ID"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/firstName"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/labelCreate"
        tools:ignore="LabelFor" />


    <EditText
        android:id="@+id/firstName"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="firstName"
        android:background="@drawable/background_et"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/surname"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/userID"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:background="@drawable/background_et"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="nickname"
        android:background="@drawable/background_et"
        android:ems="10"
        android:hint="Nickname"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/email"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="email"
        android:background="@drawable/background_et"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/nickname"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/surname"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="surname"
        android:background="@drawable/background_et"
        android:ems="10"
        android:hint="Surname"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/firstName"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="password"
        android:background="@drawable/background_et"
        android:ellipsize="start"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_create"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/labelCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/firstName"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/IMGname"
        app:layout_constraintVertical_bias="0.127" />

    <ImageView
        android:id="@+id/IMGname"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:contentDescription="@null"
        android:src="@drawable/name"
        app:layout_constraintBottom_toTopOf="@id/firstName"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <EditText
        android:id="@+id/password"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:autofillHints="password"
        android:background="@drawable/background_et"
        android:ellipsize="start"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/confirmPassword"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:ignore="LabelFor" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="49dp"
        android:layout_height="33dp"
        android:layout_marginBottom="156dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />


</androidx.constraintlayout.widget.ConstraintLayout>