<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="20dp"
    android:background="@color/generalPanel"
    android:orientation="horizontal"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tvCalendarName"
        android:layout_width="265dp"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/abeezee"
        android:text="Event Name"
        android:textColor="@color/subHeading"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCalendarCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:text="Course"
        android:textColor="@color/subSubHeading"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvCalendarTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="40dp"
        android:text="Time"
        android:textColor="@color/subSubHeading"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/ivCalendarOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_options"
        android:tint="@color/miniElipseButtonColor" />


</RelativeLayout>