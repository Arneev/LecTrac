<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:screenOrientation="portrait"
    android:background="@color/blueBackground"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tvTestItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="Test Name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/subHeading"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/tvTestItemCourse"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTestItemName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/msyi"
        android:gravity="center"
        android:text="Course Code"
        android:textColor="@color/subSubHeading"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTestItemMark"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTestItemCourse"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/msyi"
        android:text="Mark"
        android:textColor="@color/mainText"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTestItemPercent"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTestItemCourse"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toEndOf="@+id/tvTestItemMark"
        android:layout_toRightOf="@+id/tvTestItemMark"
        android:fontFamily="@font/msyi"
        android:gravity="center"
        android:text="Percentage"
        android:textColor="@color/mainText"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
