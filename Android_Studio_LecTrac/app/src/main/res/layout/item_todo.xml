<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/generalPanel"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/abeezee"
        android:text="Name"
        android:textColor="@color/subHeading"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/abeezee" />

    <TextView
        android:id="@+id/tvTaskCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/msyi"
        android:text="Course"
        android:textColor="@color/mainText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/msyi" />

    <TextView
        android:id="@+id/tvExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvTaskCourseName"
        android:layout_toRightOf="@+id/tvTaskCourseName"
        android:text="Extra"
        android:textColor="@color/subSubHeading"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/msyi" />

    <ImageView
        android:id="@+id/ivOptions"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_options"
        android:tint="@color/miniElipseButtonColor" />


</RelativeLayout>